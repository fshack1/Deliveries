<div>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.id %></td>
          <td><%= number_to_currency(delivery.cost, unit: "€") %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td><strong>Total</strong></td>
        <td><strong><%= number_to_currency(total_cost, unit: "€") %></strong></td>
      </tr>
    </tfoot>
  </table>
</div>
